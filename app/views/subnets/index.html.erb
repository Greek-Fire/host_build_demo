<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1>Subnets</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Gateway/CIDR</th>
            <th>DNS1</th>
            <th>DNS2</th>
            <th>VM Network</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @subnets.each do |subnet| %>
            <tr>
              <td><%= subnet.name %></td>
              <td><%= "#{subnet.gateway}/#{subnet.cidr}" %></td>
              <td><%= subnet.dns1 %></td>
              <td><%= subnet.dns2 %></td>
              <td><%= subnet.vm_network.name %></td> <!-- Assuming vm_network has a name attribute -->
              <td>
                <div class="btn-group">
                  <%= link_to 'Edit', edit_subnet_path(subnet), class: 'btn btn-warning btn-sm' %>
                  <%= form_with url: subnet_path(subnet), method: :delete, local: true, html: { onsubmit: "return confirm('Are you sure you want to delete this subnet?');" } do %>
                    <%= submit_tag 'Delete', class: 'btn btn-danger btn-sm' %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Create Subnet', new_subnet_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>
