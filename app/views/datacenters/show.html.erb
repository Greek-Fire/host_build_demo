<!-- app/views/datacenters/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @vcenter.name %></h1>
      <p><%= @vcenter.url %></p>

      <h2>Compute Clusters</h2>
      <% if @compute_clusters.present? %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Number of Hosts</th>
              <th>Total Storage</th>
              <th>Total VM Networks</th>
              <th>Availability</th>
            </tr>
          </thead>
          <tbody>
            <% @compute_clusters.each do |cluster| %>
              <tr>
                <td><%= cluster[:name] %></td>
                <td><%= cluster[:num_hosts] %></td>
                <td><%= link_to number_to_human_size(cluster[:total_storage]), datastores_vcenter_datacenter_compute_cluster_path(@vcenter, params[:id], cluster[:name]) %></td>
                <td><%= link_to cluster[:total_vm_networks], networks_vcenter_datacenter_compute_cluster_path(@vcenter, params[:id], cluster[:name]) %></td>
                <td><%= cluster[:availability] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No compute clusters available.</p>
      <% end %>
    </div>
  </div>
</div>
