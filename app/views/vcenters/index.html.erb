<div class="container mt-4">
  <div class="row mb-3">
    <div class="col-md-10">
      <h1>Your vCenters</h1>
    </div>
    <div class="col-md-2 text-end">
      <%= link_to 'Add New vCenter', new_vcenter_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <% if @vcenters.blank? %>
    <p>You have no vCenters added yet.</p>
  <% else %>
    <ul class="list-group">
      <% @vcenters.each do |vcenter| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to vcenter.name, vcenter_path(vcenter), class: 'list-group-item-action' %>
          <div class="btn-group">
            <%= link_to 'Edit', edit_vcenter_path(vcenter), class: 'btn btn-warning btn-sm' %>
            <%= form_with url: vcenter_path(vcenter), method: :delete, local: true, html: { onsubmit: "return confirm('Are you sure you want to delete this vCenter?');" } do %>
              <%= submit_tag 'Delete', class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

