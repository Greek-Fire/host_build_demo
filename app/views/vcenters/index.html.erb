<!-- app/views/vcenters/index.html.erb -->
<h1>Vcenters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>FQDN</th>
      <th>Location</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @vcenters.each do |vcenter| %>
      <tr>
        <td><%= vcenter.name %></td>
        <td><%= vcenter.fqdn %></td>
        <td><%= vcenter.location %></td>
        <td><%= link_to 'Show', vcenter %></td>
        <td><%= link_to 'Edit', edit_vcenter_path(vcenter) %></td>
        <td><%= link_to 'Destroy', vcenter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Vcenter', new_vcenter_path, class: "btn btn-primary" %>
