<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1>Compute Cluster: <%= @compute_cluster %></h1>
      <h2>Datacenter: <%= @datacenter %></h2>

      <h2>Datastores</h2>
      <% if @datastores.present? %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Type</th>
              <th>Total Storage</th>
              <th>Availability</th>
            </tr>
          </thead>
          <tbody>
            <% @datastores.each do |datastore| %>
              <tr>
                <td><%= datastore[:name] %></td>
                <td><%= datastore[:type] %></td>
                <td><%= number_to_human_size(datastore[:total_storage]) %></td>
                <td><%= datastore[:availability] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No datastores available.</p>
      <% end %>
    </div>
  </div>
</div>

